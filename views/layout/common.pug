html
    head
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
    body
        .container
            nav.navbar.navbar-expand-lg.navbar-light.bg-light.mb-3
                a.navbar-brand(href='#') HomePage
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.mr-auto
                        li.nav-item.active
                            a.nav-link(href='/')
                                | Home 
                                span.sr-only (current)
                        li.nav-item
                            a.nav-link(href='/users') List
                        li.nav-item
                            a.nav-link(href='/users')
                                if user
                                    p= user.name
                    form.form-inline.my-2.my-lg-0(action="/users/search", method="GET")
                        input.form-control.mr-sm-2(type='search', name="q", value=input, placeholder='Search', aria-label='Search')
                        button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
            block content