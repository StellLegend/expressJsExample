extends ../layout/common 

block content
    h1 Use list
    a.btn.btn-primary(href="/users/create") New
    table.table.mt-3
        thead
            tr  
                th(scope='col') Avatar
                th(scope='col') Name
                th(scope='col') Phone
                th(scope='col') Actions
        tbody
            each user in users
                tr  
                    td
                        img(src=user.avatar, width='64')
                    td= user.name
                    td= user.phone
                    td
                        a.btn.btn-light(href="/users/" + user.id) View