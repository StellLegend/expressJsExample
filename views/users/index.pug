extends ../layout/common 

block content
    h1 Use list
    a(href="/users/create") New
    form(action="/users/search", method="GET", class="d-flex")
        input(type="text", name="q", value=input, class="form-control")
        button(class="btn btn-primary ml-3") Search
    ul
        each user in users
            li 
                span= user.name
                span &nbsp;
                a(href="/users/" + user.id) View