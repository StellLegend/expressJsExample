extends ../layout/common 

block content
    style.
        .img-container {
        position: relative;
        width: 50%;
        }
        .img-image {
        opacity: 1;
        display: block;
        width: 500px;
        height: 500px;
        transition: .5s ease;
        background-size: contain;
        border-radius: 50%;
        backface-visibility: hidden;
        }
        .img-middle {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
        }
        .img-container:hover .img-image {
        opacity: 0.3;
        }
        .img-container:hover .img-middle {
        opacity: 1;
        }
        .img-text {
        background-color: #4CAF50;
        color: white;
        font-size: 16px;
        padding: 16px 32px;
        }
        .img-text:hover {
            transition: 0.5s;
            text-decoration:none;
            background-color: white;
            color: #4CAF50;
            border: 2px solid #4CAF50;
        }
    div.d-flex.flex-column
        h1.align-self-center User Infomation 
        .img-container.align-self-center.d-flex.justify-content-center.mt-1
            img.img-image(src= info.avatar, alt='Avatar')
            .img-middle
                h2= info.name
                p= info.email
                p= info.phone
                a.img-text(href='/users') Return


